{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "additionalBranchPrefix": "{{packageName}}-",
  "packageRules": [
    {
      "matchManagers": ["terraform", "terraform-version"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
